#!/bin/bash

## #ddev-generated
## Description: Run Experience Builder's Cypress tests in interactive mode.
## Usage: xb-cypress-open
## Example: ddev xb-cypress-open
## Aliases: cy-open,cy:open
## OSTypes: darwin

cd "$(dirname "$0")" || exit 1; source .xb-command-include || exit 1

if [ -z "$(which node)" ]; then
  echo 'Missing required Node.js on the host. Install it and try again.'
  echo 'Hint: https://nodejs.org/en/learn/getting-started/how-to-install-nodejs'
  exit 1
fi

node_modules/.bin/cypress open \
  --browser electron \
  --project .
